{
  "mcpServers": {
    "pal": {
      "command": "mise",
      "args": ["exec", "--", "uvx", "--from", "git+https://github.com/BeehiveInnovations/pal-mcp-server.git", "pal-mcp-server"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "DISABLED_TOOLS": "analyze,refactor,testgen,secaudit,docgen,tracer",
        "DEFAULT_MODEL": "auto"
      }
    },
    "context7": {
      "command": "mise",
      "args": ["exec", "--", "npx", "-y", "@upstash/context7-mcp@latest", "--api-key", "${CONTEXT7_API_KEY}"]
    }
  }
}
